{
  "manifest_version": 3,
  "name": "Rumi: Remembers",
  "description": "Rumi is a lightweight note-taking extension powered by an LLM.",
  "version": "1.0",
  "action": {
    "default_popup": "public/popup.html",
    "default_icon": "images/icon.png"
  },
  "host_permissions": ["http://127.0.0.1:42000/*", "http://localhost:42000/*"],
  "homepage_url": "http://127.0.0.1"
}
